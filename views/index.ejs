<% var cart = cart %>
<% include partials/header %>
<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-md-8">
        <div class="row">
          <h2><span id="main-text">Save Puppies</span></h2>
        </div>
        <div class="row">
          <h2><span id="from">From </span><span id="cruella">Cruella de Vil<span></h2>
        </div>
      </div>
      <div class="col-sm-2 col-md-4">
       <img class="cruella" src="https://cdn.pixabay.com/photo/2017/04/28/01/09/cruella-2267126_1280.png">
      </div>      
    </div>
  </div>
</div>
<div class="container">
	<div class="row">
		<% puppies.forEach(function(puppy){ %>
  		<div class="col-sm-6 col-md-4">
    		<div class="thumbnail">
      			<img src="<%= puppy.image %>" class="img-responsive">
      			<div class="caption clearfix">
        			<h3><%= puppy.name %></h3>
        			<p class="description"> <%= puppy.description %></p>
        			<div>
        				<div class="price pull-left">$<%= puppy.price %></div>
	        			<a href="/add-to-cart/<%= puppy._id%>" class="btn btn-primary pull-right" role="button">Add to Saved Puppies</a> 
        			</div>
      			</div>
    		</div>
  		</div>
  	<% }); %>
	</div>	
</div>  
<% include partials/footer %>
